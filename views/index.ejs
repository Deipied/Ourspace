<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OurSpace</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <h1>Ourspace</h1>
  <p>"This is our new project"</p>
  <body>
    <form action="/posts" id="content-container" method="POST">
      <label for="name-field">Title</label>
      <input type="text" name="title" id="name-input" required />

      <label for="Text-Area">Blog Post</label>
      <textarea
        style="resize: none"
        name="thoughts"
        id="text-input"
        cols="80"
        rows="6"
        maxlength="300"
        placeholder="What are your thoughts? (Max 300 characters)"
      ></textarea>
      <button type="submit">Submit</button>
    </form>
    <section id="msg-container-1">
      <ul class="posts">
        <!-- Loop through posts -->
        <% for(var i = 0; i < posts.length; i++) {%>
        <li class="post">
          <span><%= posts[i].title %></span>:

          <span><%= posts[i].thoughts %></span>

          <span><%= posts[i]._id %></span>
          <button onclick="editBlogEntry(event)">Edit</button>
          <button
            onclick="deleteBlogEntry(event)"
            unique_id="<%= posts[i]._id %>"
          >
            Delete
          </button>
        </li>
        <% } %>
      </ul>
    </section>

    <script src="main.js"></script>
  </body>
</html>
