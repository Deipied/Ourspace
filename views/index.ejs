      <div id="form-container">
        <h3>Submit your thoughts here ðŸ‘Œ</h3>
        <form action="/posts" method="POST" id="bsform">
          <div class="mb-3">
            <label for="name-field" class="form-label">Your Name</label>
            <input
              name="name"
              type="text"
              class="form-control"
              id="nameInput"
              aria-describedby="nameHelp"
              placeholder="Bob?"
            />
          </div>
          <div class="mb-3">
            <label for="text" class="form-label">Post Title</label>
            <input name="title" type="text" class="form-control" id="title" />
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label"
              >Thoughts</label
            >
            <textarea
              name="thoughts"
              class="form-control"
              id="thoughtsInput"
              rows="4"
              placeholder="What are your thoughts?"
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

      <div id="my_msg">
        <section id="msg-container-1">
          <h3>Current Thoughts ðŸ¤”</h3>
          <% for(var i = 0; i < posts.length; i++) {%>
          <div class="w-75 p-3" style="background-color: aliceblue">
            <div class="card" style="background-color: #e8f9fd">
              <h5 class="card-header"><%= posts[i].title %></h5>
              <div class="card-body">
                <h6 class="card-text"><%= posts[i].name %></h6>
                <p class="card-title"><%= posts[i].thoughts %></p>
                <button
                  class="btn btn-primary"
                  onclick="editBlogEntry(event)"
                  unique_id="<%= posts[i]._id %>"
                >
                  Edit
                </button>
                <button
                  class="btn btn-secondary"
                  onclick="deleteBlogEntry(event)"
                  unique_id="<%= posts[i]._id %>"
                >
                  Delete
                </button>
              </div>
            </div>
          </div>

          <% } %>
        </section>
      </div>
      <div id="my_footer">
        <footer id="footer">Authors</footer>
        <p>Cory, Hoon, Chris</p>
        <p>
          <a href="https://github.com/Deipied/Ourspace.git"
            >Visit Ourspace@github.com!!</a
          >
        </p>
      </div>
    </div>

    <div id="right_div" class="column">
      <div id="weather-container"></div>
    </div>

